{
    "manifest_version": 3,
    "name": "archrome",
    "version": "1.0.0",
    "action": { "default_popup": "index.html" },
    "icons": {
        "16": "public/archrome.png",
        "32": "public/archrome@2x.png",
        "48": "public/archrome@3x.png",
        "128": "public/archrome@8x.png"
    },
    "permissions": [
        "tabs"
    ],
    "background": {
        "service_worker": "src/background.ts"
    }
  }