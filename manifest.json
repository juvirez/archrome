{
    "manifest_version": 3,
    "name": "archrome",
    "description": "Automatically open Google Workspace links in Chrome, all others in your default browser via Finicky.",
    "version": "1.0.2",
    "icons": {
        "16": "icons/archrome.png",
        "32": "icons/archrome@2x.png",
        "48": "icons/archrome@3x.png",
        "128": "icons/archrome@8x.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "contextMenus"
    ],
    "action": {},
    "background": {
        "service_worker": "src/background.ts"
    }
  }